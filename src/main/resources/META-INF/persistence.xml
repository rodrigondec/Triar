<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence 
		http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="TriarPU" transaction-type="JTA">
		<class>dominio.Administrador</class>
		<class>dominio.Coordenador</class>
		<class>dominio.Graduado</class>
		<class>dominio.Inscricao</class>
		<class>dominio.Mensagem</class>
		<class>dominio.Noticia</class>
		<class>dominio.Pessoa</class>
		<class>dominio.ProcessoSeletivo</class>
		<class>dominio.Situacao</class>
		<class>dominio.Usuario</class>
		<class>dominio.Vaga</class>

		<jta-data-source>java:/TriarDS</jta-data-source>
		<properties>
			<property name="hibernate.dialect" 
				value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.charSet" 
				value="UTF-8" />
		</properties>
	</persistence-unit>
</persistence>